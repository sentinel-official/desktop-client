{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "standard"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "indent": [
      2,
      4
    ],
    "arrow-parens": [
      2,
      "always"
    ],
    "semi": [
      2,
      "always"
    ],
    "comma-dangle": [
      2,
      "always-multiline"
    ],
    "jsx-quotes": [
      2
    ],
    "dot-notation": [
      2,
      {
        "allowPattern": "^[0-9A-Za-z]+(_[0-9A-Za-z]+)+$"
      }
    ],
    "curly": [
      2,
      "all"
    ],
    "react/jsx-first-prop-new-line": [
      2,
      "multiline-multiprop"
    ],
    "react/jsx-indent-props": [
      2,
      "first"
    ],
    "react/sort-prop-types": [
      2,
      {
        "callbacksLast": true,
        "requiredFirst": true
      }
    ],
    "react/jsx-sort-props": [
      2,
      {
        "callbacksLast": true,
        "reservedFirst": true,
        "shorthandFirst": true
      }
    ]
  }
}
